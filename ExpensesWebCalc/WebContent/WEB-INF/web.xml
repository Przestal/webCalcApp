<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>Home</display-name>
    <welcome-file-list>
        <welcome-file>/home/home.jsp</welcome-file>
    </welcome-file-list>


    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.przestal.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>registerUser</servlet-name>
        <servlet-class>com.przestal.controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registerUser</servlet-name>
        <url-pattern>/registerUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>createTable</servlet-name>
        <servlet-class>com.przestal.controller.CreateTableDBServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createTable</servlet-name>
        <url-pattern>/createTable</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addValue</servlet-name>
        <servlet-class>com.przestal.controller.AddValueToRowServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addValue</servlet-name>
        <url-pattern>/addValue</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>subtractValue</servlet-name>
        <servlet-class>com.przestal.controller.SubtractValueToRowServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>subtractValue</servlet-name>
        <url-pattern>/subtractValue</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.przestal.controller.LogoutServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>addColumn</servlet-name>
        <servlet-class>com.przestal.controller.AddColumnServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>addColumn</servlet-name>
        <url-pattern>/addColumn</url-pattern>
    </servlet-mapping>
    
    <servlet>
    	<servlet-name>selected</servlet-name>
    	<servlet-class>com.przestal.controller.SwitchDateController</servlet-class>
    </servlet>
    
    <servlet-mapping>
    	<servlet-name>selected</servlet-name>
    	<url-pattern>/selected</url-pattern>
    </servlet-mapping>
</web-app>